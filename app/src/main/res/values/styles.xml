<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/textColorPrimaryAppBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="layout_primary">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="dialog_primary">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="tv_primary">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">right</item>
        <item name="android:ems">12</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tv_primary_progress_bar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="progress_bar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/backgroundColor</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="tv_primary_left" parent="tv_primary">
        <item name="android:gravity">left</item>
    </style>

    <style name="tv_primary_mini" parent="tv_primary">
        <item name="android:textSize">12dp</item>
        <item name="android:ems">8</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="tv_primary_bold_left" parent="tv_primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="tv_primary_bold_center" parent="tv_primary_bold_left">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="tv_primary_bold_background" parent="tv_primary_bold_left">
        <item name="android:background">@drawable/tv_redondo</item>
    </style>

    <style name="et_primary" parent="tv_primary">
        <item name="android:background">@drawable/et_redondo</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="et_primary_mini" parent="et_primary">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="et_primary_bold" parent="et_primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="b_primary">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:ems">12</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/textColorPrimaryAppBar</item>
        <item name="android:background">@drawable/boton_redondo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
