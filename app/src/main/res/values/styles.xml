<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/textColorPrimaryAppBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="estilo_texto">
        <item name="android:textColor">#212121</item>
        <item name="android:background">#d7ccc8</item>
    </style>

    <style name="tv_primary">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tv_primary_mini" parent="tv_primary">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="tv_primary_bold" parent="tv_primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="et_primary" parent="tv_primary">
        <item name="android:gravity">left</item>
    </style>

    <style name="et_primary_mini" parent="et_primary">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="et_primary_bold" parent="et_primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="b_primary">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/textColorPrimaryAppBar</item>
        <item name="android:background">@drawable/boton_redondo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
