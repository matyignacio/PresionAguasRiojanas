<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_primary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.inspeccion.InspeccionActivity">

    <Button
        android:id="@+id/bNuevaInspeccion"
        style="@style/b_primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/backgroundColor"
        android:enabled="false"
        android:text="@string/bNuevaInspeccion" />

    <Button
        android:id="@+id/bRelevamiento"
        style="@style/b_primary"
        android:layout_below="@id/bNuevaInspeccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/b_nuevo_relevamiento" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:theme="@style/progress_bar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvProgressBar"
        style="@style/tv_primary_progress_bar"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_progress_bar"
        android:textAlignment="center"
        android:visibility="gone" />

</RelativeLayout>