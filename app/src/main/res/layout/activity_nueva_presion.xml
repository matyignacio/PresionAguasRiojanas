<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NuevaPresionActivity">

    <EditText
        android:id="@+id/etPresion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/hitn_ingrese_presion"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/bEnviarMediicion"
        style="@style/b_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_send_24dp"
        android:layout_below="@id/etPresion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/b_enviar_medicion" />
</RelativeLayout>